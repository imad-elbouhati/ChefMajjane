<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".views.EspaceSushiFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuTypeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layoutAnimation="@anim/item_layout_anim"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_row_layout_menu_type" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sushiRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_row_layout_sushi"
        android:layoutAnimation="@anim/item_layout_anim"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/menuTypeRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/menuTypeRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/menuTypeRecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>